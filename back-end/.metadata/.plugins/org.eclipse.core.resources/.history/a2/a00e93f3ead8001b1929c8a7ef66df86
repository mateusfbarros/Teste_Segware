package com.mateus.post.repositories;

import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.stereotype.Repository;

import com.mateus.post.domain.Post;

@Repository
public interface PostRepository extends JpaRepository<Post, Integer>{
	
	@Query("SELECT obj from Post obj WHERE obj.upvote = false ORDER BY obj.dataDePublicacao")
	List<Post> findAllOpen();
	
	@Query("SELECT obj from Post obj WHERE obj.upvote = true ORDER BY obj.dataDePublicacao")
	List<Post> findAllClose();
	

}
